    <TextView
        android:id="@+id/longtitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:text="@string/longtitude"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/longtitudeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/longtitude"
        android:background="#000" >

        <TextView
            android:id="@+id/longtitudevalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:background="#FFFFFF"
            android:text="@string/longtitudevalue"
            android:textSize="7pt" />
    </LinearLayout>

    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/longtitude"
        android:layout_alignRight="@+id/longtitude"
        android:layout_below="@+id/longtitude"
        android:layout_marginTop="4dp"
        android:text="@string/latitude"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/latitudeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/longtitude"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/latitude"
        android:background="#000" >

        <TextView
            android:id="@+id/latitudevalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:background="#FFFFFF"
            android:text="@string/latitudevalue"
            android:textSize="7pt" />
    </LinearLayout>

