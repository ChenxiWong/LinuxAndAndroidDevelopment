    <Button
        android:id="@+id/scanebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latitude"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="@string/scanebutton" />

    <TextView
        android:id="@+id/signcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/scanebutton"
        android:layout_marginTop="43dp"
        android:text="@string/signcode"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/scanebarcodeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/scanebutton"
        android:layout_marginTop="43dp"
        android:layout_toRightOf="@+id/signcode"
        android:background="#000" >

        <TextView
            android:id="@+id/signcodevalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:background="#FFFFFF"
            android:text="@string/space"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <Button
        android:id="@+id/finalsend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanebarcodeline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="@string/finalsend" />

    <TextView
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/signcode"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/scanebarcodeline"
        android:layout_below="@+id/finalsend"
        android:ems="10"
        android:inputType="textMultiLine" />

</RelativeLayout>